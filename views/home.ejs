<% layout('layout') %>
<!-- Hero Section with Enhanced Design -->
<section class="hero-section position-relative overflow-hidden" style="background: url('https://images.unsplash.com/photo-1503736334956-4c8f8e92946d?auto=format&fit=crop&w=1200&q=80') center/cover no-repeat; min-height: 600px;">
  <div class="container h-100" style="pointer-events: auto; position: relative; z-index: 2;">
    <div class="row h-100 align-items-center">
      <div class="col-lg-8 col-md-10 mx-auto text-center text-white">
        <h1 class="display-3 fw-bold mb-4" style="text-shadow: 3px 3px 6px rgba(0,0,0,0.8);">
          <span class="d-block mb-2">RENT A CAR</span>
          <span class="d-block fs-4 fw-normal">Experience the Freedom of the Road</span>
        </h1>
        <p class="lead mb-5 opacity-90" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">Choose from our premium fleet of vehicles and enjoy a seamless rental experience</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
          <a href="<%= user ? '/booking' : '/auth/login?next=/booking' %>" class="btn btn-primary btn-lg px-5 py-3 fw-bold shadow-lg">
            <i class="bi bi-calendar-check me-2"></i>Reserve Now
          </a>
          <a href="/cars" class="btn btn-outline-light btn-lg px-5 py-3 fw-bold">
            <i class="bi bi-car-front me-2"></i>Browse Cars
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-white">
  <div class="container">
    <div class="row g-4">
      <div class="col-lg-3 col-md-6">
        <div class="text-center p-4">
          <div class="bg-primary bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
            <i class="bi bi-shield-check text-white fs-1"></i>
          </div>
          <h5 class="fw-bold mb-2">Safe & Reliable</h5>
          <p class="text-muted mb-0">All our vehicles are regularly maintained and fully insured</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="text-center p-4">
          <div class="bg-success bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
            <i class="bi bi-lightning-charge text-white fs-1"></i>
          </div>
          <h5 class="fw-bold mb-2">Quick & Easy</h5>
          <p class="text-muted mb-0">Book your car in minutes with our streamlined process</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="text-center p-4">
          <div class="bg-info bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
            <i class="bi bi-currency-dollar text-white fs-1"></i>
          </div>
          <h5 class="fw-bold mb-2">Best Prices</h5>
          <p class="text-muted mb-0">Competitive rates with no hidden fees or charges</p>
        </div>
      </div>
      <div class="col-lg-3 col-md-6">
        <div class="text-center p-4">
          <div class="bg-warning bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
            <i class="bi bi-headset text-white fs-1"></i>
          </div>
          <h5 class="fw-bold mb-2">24/7 Support</h5>
          <p class="text-muted mb-0">Round-the-clock customer service for your peace of mind</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Cars Section -->
<section class="py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="display-5 fw-bold mb-3">Featured Cars</h2>
      <p class="lead text-muted">Discover our most popular vehicles</p>
    </div>
    <div class="row g-4">
      <% cars.slice(0, 6).forEach(function(car) { %>
        <div class="col-lg-4 col-md-6">
          <div class="card h-100 car-card">
            <div class="position-relative">
              <img src="<%= car.image %>" class="card-img-top" alt="<%= car.brand %> <%= car.model %>" style="height: 200px; object-fit: cover;">
              <div class="position-absolute top-0 end-0 m-3">
                <span class="badge bg-success fs-6">Available</span>
              </div>
            </div>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold mb-2"><%= car.brand %> <%= car.model %></h5>
              <div class="row text-muted small mb-3">
                <div class="col-6"><i class="bi bi-calendar me-1"></i><%= car.year %></div>
                <div class="col-6"><i class="bi bi-gear me-1"></i><%= car.transmission %></div>
                <div class="col-6"><i class="bi bi-fuel-pump me-1"></i><%= car.fuel %></div>
                <div class="col-6"><i class="bi bi-geo-alt me-1"></i><%= car.location %></div>
              </div>
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="fs-4 fw-bold text-primary">$<%= car.pricePerDay %>/day</span>
                <span class="badge bg-primary"><%= car.category %></span>
              </div>
              <div class="mt-auto">
                <div class="d-flex gap-2">
                  <a href="/cars/<%= car.id %>" class="btn btn-outline-primary flex-fill">
                    <i class="bi bi-eye me-1"></i>View Details
                  </a>
                  <a href="<%= user ? '/booking' : '/auth/login?next=/booking' %>" class="btn btn-primary flex-fill">
                    <i class="bi bi-calendar-check me-1"></i>Reserve
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
    <div class="text-center mt-5">
      <a href="/cars" class="btn btn-outline-primary btn-lg">
        <i class="bi bi-arrow-right me-2"></i>View All Cars
      </a>
    </div>
  </div>
</section>

<!-- Testimonials Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="display-5 fw-bold mb-3">What Our Customers Say</h2>
      <p class="lead text-muted">Real experiences from satisfied customers</p>
    </div>
    <div class="row g-4">
      <% if (testimonials && testimonials.length > 0) { %>
        <% testimonials.forEach(function(testimonial) { %>
          <div class="col-lg-4 col-md-6">
            <div class="card h-100 testimonial-card">
              <div class="card-body text-center p-4">
                <img src="<%= testimonial.avatar %>" alt="<%= testimonial.name %>" class="rounded-circle mb-3" style="width: 60px; height: 60px; object-fit: cover;">
                <p class="card-text mb-3">"<%= testimonial.text %>"</p>
                <h6 class="fw-bold mb-1"><%= testimonial.name %></h6>
                <small class="text-muted"><%= new Date(testimonial.date).toLocaleDateString() %></small>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12 text-center">
          <p class="text-muted">No testimonials available at the moment.</p>
        </div>
      <% } %>
    </div>
  </div>
</section>

<!-- Offers Section -->
<section class="py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="display-5 fw-bold mb-3">Special Offers</h2>
      <p class="lead text-muted">Exclusive deals and promotions</p>
    </div>
    <div class="row g-4">
      <div class="col-lg-4">
        <div class="card offer-card h-100">
          <div class="card-body text-center p-4">
            <div class="bg-warning bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
              <i class="bi bi-percent text-white fs-1"></i>
            </div>
            <h5 class="fw-bold mb-2">Weekend Special</h5>
            <p class="text-muted mb-3">Get 20% off on weekend rentals</p>
            <a href="<%= user ? '/booking' : '/auth/login?next=/booking' %>" class="btn btn-warning">Book Now</a>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card offer-card h-100">
          <div class="card-body text-center p-4">
            <div class="bg-info bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
              <i class="bi bi-calendar-week text-white fs-1"></i>
            </div>
            <h5 class="fw-bold mb-2">Weekly Rate</h5>
            <p class="text-muted mb-3">Rent for a week and save 15%</p>
            <a href="<%= user ? '/booking' : '/auth/login?next=/booking' %>" class="btn btn-info text-white">Book Now</a>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card offer-card h-100">
          <div class="card-body text-center p-4">
            <div class="bg-success bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
              <i class="bi bi-star text-white fs-1"></i>
            </div>
            <h5 class="fw-bold mb-2">First Time</h5>
            <p class="text-muted mb-3">New customers get 10% off</p>
            <a href="<%= user ? '/booking' : '/auth/login?next=/booking' %>" class="btn btn-success">Book Now</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.hero-section {
  position: relative;
  overflow: hidden;
}

.car-card {
  transition: all 0.3s ease;
}

.car-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.testimonial-card {
  transition: all 0.3s ease;
}

.testimonial-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.offer-card {
  transition: all 0.3s ease;
}

.offer-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

/* Animation for page load */
.hero-section h1,
.hero-section p,
.hero-section .btn {
  animation: fadeInUp 0.8s ease-out;
}

.hero-section .btn:nth-child(2) {
  animation-delay: 0.2s;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style> 