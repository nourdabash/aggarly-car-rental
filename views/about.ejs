  <h4 class="fw-bold mb-3 mt-5">Customer Testimonials</h4>
  <% if (testimonials && testimonials.length) { %>
    <div class="row g-4 mb-4">
      <% testimonials.forEach(function(t, idx) { %>
        <div class="col-md-6">
          <div class="bg-white rounded shadow-sm p-4 h-100">
            <div class="d-flex align-items-center mb-2">
              <div class="rounded-circle bg-primary d-flex justify-content-center align-items-center me-3" style="width:48px;height:48px;overflow:hidden;">
                <img src="<%= t.avatar || (idx === 0 ? 'https://images.unsplash.com/photo-1511367461989-f85a21fda167?auto=format&fit=facearea&w=48&h=48&q=80' : 'https://images.unsplash.com/photo-1508214751196-bcfd4ca60f91?auto=format&fit=facearea&w=48&h=48&q=80') %>" class="img-fluid" style="width:48px;height:48px;object-fit:cover;">
              </div>
              <div>
                <div class="fw-bold"><%= t.name %></div>
                <div class="text-muted small"><%= new Date(t.date).toLocaleDateString() %></div>
              </div>
            </div>
            <p class="mb-0">"<%= t.text %>"</p>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
  <h4 class="fw-bold mb-3 mt-5">Our Partners</h4>
  <% if (partners && partners.length) { %>
    <div class="row g-4 mb-4">
      <% partners.forEach(function(p, idx) { %>
        <div class="col-md-6">
          <div class="bg-white rounded shadow-sm p-4 h-100 d-flex align-items-center">
            <img src="<%= p.logo || (idx === 0 ? 'https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=64&q=80' : 'https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=64&q=80') %>" alt="<%= p.name %> Logo" style="width:64px;height:64px;object-fit:contain;" class="me-3">
            <div>
              <div class="fw-bold mb-1"><a href="<%= p.url %>" target="_blank"><%= p.name %></a></div>
              <div class="text-muted small"><%= p.description %></div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
  <h4 class="fw-bold mb-3 mt-5">Frequently Asked Questions</h4>
  <% if (faq && faq.length) { %>
    <div class="accordion" id="faqAccordion">
      <% faq.forEach(function(item, idx) { %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="faqHeading<%= idx %>">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqCollapse<%= idx %>" aria-expanded="false" aria-controls="faqCollapse<%= idx %>">
              <%= item.question %>
            </button>
          </h2>
          <div id="faqCollapse<%= idx %>" class="accordion-collapse collapse" aria-labelledby="faqHeading<%= idx %>" data-bs-parent="#faqAccordion">
            <div class="accordion-body">
              <%= item.answer %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
